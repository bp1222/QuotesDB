<!DOCTYPE html>
<html>
<head>
  <title>Quotedb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/menu" %>

  <div class="container">
    <% flash.each do |name, message| %>
      <div class='alert alert-<%= name %> alert-dismissible'>
        <%= message %>
      </div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
